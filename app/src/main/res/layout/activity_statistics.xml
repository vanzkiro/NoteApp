<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Thống kê hoàn thành"
        app:titleTextColor="#FFFFFF"
        android:contentDescription="Thanh công cụ" />

    <TextView
        android:id="@+id/tvCompletedCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số kế hoạch hoàn thành: 0"
        android:textSize="16sp"
        android:textColor="#1F2937"
        android:paddingBottom="8dp"
        android:contentDescription="Số lượng đã hoàn thành" />
    <TextView
        android:id="@+id/tvCategoryStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thống kê theo danh mục: Chưa có kế hoạch hoàn thành"
        android:textSize="16sp"
        android:textColor="#1F2937"
        android:paddingBottom="16dp"
        android:contentDescription="Thống kê theo danh mục" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCompleted"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:contentDescription="Danh sách đã hoàn thành" />
    </androidx.cardview.widget.CardView>
</LinearLayout>